<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="448dp"
            app:layout_constraintHorizontal_bias="1.0">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/amountBox"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/amountBox"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="380dp"
            app:layout_constraintHorizontal_bias="0.245" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/tipButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tipButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="368dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_percent=".5"/>


</android.support.constraint.ConstraintLayout>